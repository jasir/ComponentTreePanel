{*
  @param $object
  @param $inherited show Inherited Methods?
  @param $name
  @param $showEmpty
  @param $hideMethods
*}

{block #methods}

<?php
	if (!isset($hideMethods)) {
		$hideMethods = array();
	}
	$methods = $object->getReflection()->getMethods();

	$filtered = array();

	foreach($methods as $method) {

		if (!preg_match($pattern, $method->getName(), $matches)) {
			continue;
		}
		if ($method->class !== get_class($object) && $inherited === FALSE) {
			continue;
		}
		if (in_array($method->getName(), $hideMethods)) {
			continue;
		}

		$filtered[] = $method;
	}
	$showEmpty = isset($showEmpty) ? $showEmpty : FALSE;
?>

	{if count($filtered)>0 || $showEmpty === TRUE}
		<li>
			<i>{$name} ({=count($filtered)})</i><a class="nette-toggler" rel="next" href="#"><abbr> &#x25ba;</abbr></a>

			<ul class="nette-hidden">

				{foreach $filtered as $method}
					<li>
						{!=preg_replace($pattern, '${1}<strong>${2}</strong>', $method->name)}()
							{if $method->class !== get_class($object)}
								<i>defined in</i> {$method->class}
							{/if}
							<a href="{!=\Extras\Debug\ComponentTreePanel::createEditLink($method->getFileName(), $method->getStartLine())}">edit</a>
							<a class="nette-toggler" href="#" rel="next"><abbr>&#x25ba;</abbr></a>
							<div class="nette-hidden">
								{include sourcefile.phtml, object => $method, showSource => TRUE}
							</div>

				{/foreach}

			</ul>
		</li>
	{/if}

{/block}